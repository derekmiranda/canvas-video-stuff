{
  "env": {
    "commonjs": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": 0,
    "max-len": 0,
    "no-comma-dangle": 0,
    "no-console": 0,
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
